[core]
    editor = vim
    pager = less
    excludesfile = $HOME/.gitignore
    # enable "autocrlf" this when you are on Windows. for line break.
	autocrlf = input # true, false, input, off
    whitespace=indent-with-non-tab,space-before-tab,cr-at-eol,blank-at-eof,blank-at-eol

[help]
    autocorrect = 1 # when only one command matchs, this command will be executed.

[color]
    ui = true # [true|always|false] let git color all terminal's output.
    branch = true
    diff = true
    interactive = true
    status = true
## syntax: foreground background style
## available colors: normal, black, red, green, yellow, blue, magenta, cyan, white.
## available style: bold, dim, ul, blink, reverse.
[color "branch"]
    current = white
    local = yellow
    remote = magenta
[color "diff"]
	meta = blue black bold
    frag = magenta bold
    old = yellow
    new = green
    whitespace = red reverse
[color "status"]
    added = green
    changed = cyan
    header = white ; text of status
    nobranch = red
    untracked = white
    updated = cyan
    ; --------------
    deleted = red
    renamed = yellow
    unmerged = magenta


[commit]
	template = $HOME/Git/dotfiles/dotgit/commit.template
[push]
    default = matching
[diff]
    tool = vimdiff
    cmd = vimdiff
    prompt = true
[merge]
    #tool = vimdiff
	#conflictstyle = diff3
    tool = splice
[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true

[alias]
	s   = status
	c   = commit
	br  = branch
	co  = checkout

	ut = rm -r --cached
	l  = log --graph
	unstage = reset HEAD --
    unchange = checkout --
    # with ! to use external command.
	visual = !gitk
	last = log -1 HEAD

    undo-last-commit = reset HEAD^
    add-delete = ls-files --deleted | xargs git rm

    show-option = config --get

    log-fetched = log -p HEAD..FETCH_HEAD
    visual-fetched = !gitk HEAD...FETCH_HEAD
    ; log-diff-origin = log -p master..ORIG_HEAD
    log-diff-origin = log -p master..origin/master
    log-diff-remote = log -p master..remote/master

    log-graph = log --color --pretty=format:'%s %an, %ar' --graph
    log-pretty-graph = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

[branch "master"]
    mergeoptions = --no-ff ; default disable fast forwarding on branch master.

# for .gitattributes
[diff "word"]
    ; textconv = strings ; for Word *.doc files gitattributes.
    textconv = wvText ; use program "wv"
[diff "exif"]
	textconv = exiftool
