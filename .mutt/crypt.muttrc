set crypt_autopgp = yes # enable PGP encrypt/sign for message.
set crypt_autoencrypt = no # always attempt to PGP encrypt outgoing messages
set crypt_autosign = yes # always attemp to cryptographically sign outgoing messages
set crypt_autosmime = yes
set crypt_replyencrypt = yes
set crypt_replysign = yes
set crypt_replysignencrypted = yes
set crypt_timestamp = yes
set crypt_use_gpgme = no
set crypt_use_pka = no
set crypt_verify_sig = yes

set forward_decrypt = yes

# vim: ft=muttrc
