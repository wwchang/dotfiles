# header {{{
snippet     #!
abbr        #!/usr/bin/env ruby
alias       shebang
options     head
  #!/usr/bin/env ruby

  ${0}
# }}}

# function {{{
snippet     function
abbr        def func(args) .. end
alias       def
  def ${1:name}(${2:#:parameters})
    ${3:TARGET:statements}
  end
# }}}

# comment {{{
snippet     comment oneline
abbr        # comment
  # ${1:comment}
# }}}


# vim:fdm=marker:fmr={{{,}}}:expandtab:sw=2:sts=2
