[commit]
    ; template = $HOME/.gitmessage.txt
[push]
    default = matching
[diff]
    tool = vimdiff
    cmd = vimdiff
    prompt = true
[merge]
    #tool = vimdiff
	#conflictstyle = diff3
    tool = splice

[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true

[alias]
	s  = status
	a  = add
	b  = branch
	c  = commit
	co = checkout
    d  = difftool
	l  = log --graph
	m  = mergetool
	t  = tag
	ut = rm -r --cached
	unstage = reset HEAD
	visual = !gitk
    last = log -1 HEAD

    gl  = log -10 --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cred%d%Creset%n'
    gll = log     --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cred%d%Creset%n'
