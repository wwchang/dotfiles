[core]
    editor = vim
    pager = less
    excludesfile = $HOME/.gitignore
    ; autocrlf = true ## enable this when you are on Windows. for line break.
	autocrlf = input
    whitespace=fix,trailing-space,indent-with-non-tab,cr-at-eol
        ## trailing-space: space at the end of line.
        ## space-before-tab: space before Tab.
        ## indent-with-non-tab: indent with non-Tab. like 8 spaces.
        ## cr-at-eol: Carry Return at the End-Of-Line.

[help]
    ; autocorrect = 1 # when only one command matchs, this command will be executed.

[color]
    ui = true # [true|always|false] let git color all terminal's output.
    branch = true
    diff = true
    interactive = true
    status = true
## syntax: foreground background style
## available colors: normal, black, red, green, yellow, blue, magenta, cyan, white.
## available style: bold, dim, ul, blink, reverse.
;[color "branch"]
    ;current = blue
    ;local = yellow
    ;remote = cyan
;[color "diff"]
    ;meta = yellow bold
    ;frag = magenta bold
    ;old = red
    ;new = green
    ;whitespace = red reverse
[color "status"]
    added = green
    changed = cyan
    header = white ; text of status
    nobranch = red
    untracked = white
    updated = cyan
    ; --------------
    deleted = red
    renamed = yellow
    unmerged = magenta

[commit]
    ; template = $HOME/.gitmessage.txt
[push]
    default = matching
[diff]
    tool = vimdiff
    cmd = vimdiff
    prompt = true
[merge]
    #tool = vimdiff
	#conflictstyle = diff3
    tool = splice

[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true

[alias]
	s   = status
	br  = branch
	ci  = commit
	co  = checkout

	ut = rm -r --cached
	l  = log --graph
	unstage = reset HEAD --
    # with ! to use external command.
	visual = !gitk
	last = log -1 HEAD

    undo-last-commit = reset HEAD^
    add-delete = ls-files --deleted | xargs git rm

    log-graph = log --color --pretty=format:'%s %an, %ar' --graph
    log-pretty-graph = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
